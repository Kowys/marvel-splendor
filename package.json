{
  "name": "express-browser-reload",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm install && node server.js",
    "watch:build": "tsc -w",
    "watch:server": "nodemon --ext * --env-file=.env server.js",
    "dev": "npm-run-all --parallel watch:build watch:server"
  },
  "nodemonConfig": {
    "ignore": [
      "db/*.db"
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "mysql2": "^3.9.2",
    "npm-run-all": "^4.1.5",
    "sqlite3": "^5.1.7",
    "tsc-watch": "^6.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/node": "^20.11.22",
    "connect-livereload": "^0.6.1",
    "livereload": "^0.9.3",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  }
}
